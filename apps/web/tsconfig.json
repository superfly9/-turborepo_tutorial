{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "app/*": [
        "./app/*"
      ],
      "component/*": [
        "./app/components/*"
      ],
      "api/*": [
        "./app/api/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      },
    ],
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}